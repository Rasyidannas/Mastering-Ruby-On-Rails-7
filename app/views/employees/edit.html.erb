<div>
  <h1>Editing Employee</h1>
  <br/>

  <%= form_for @employee, html: {class: "form-horizontal", multipart: true} do |f| %>
    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          First Name:
        </label>
        <div class="col-sm-10">
          <%= f.text_field :firstname, placeholder: 'Enter First Name', class: 'form-control' %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Last Name:
        </label>
        <div class="col-sm-10">
          <%= f.text_field :lastname, placeholder: "Enter Last Name", class: "form-control" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Has Passport:
        </label>
        <div class="col-sm-10">
          <div class="form-check">
            <%= f.check_box :haspassport, { class: 'form-check-input' } %>
          </div>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Salary
        </label>
        <div class="col-sm-10">
          <%= f.text_field :salary, placeholder: 'Enter Salary', class: 'form-control' %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Birth Date:
        </label>
        <div class="col-sm-10">
          <%= f.text_field :birthdate, class: 'form-control' %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Hiring Date:
        </label>
        <div class="col-sm-10">
          <%= f.text_field :hiredate, class: 'form-control' %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <legend class="col-form-label col-sm-2 pt-0">Gender:</legend>
        <div class="col-sm-10">
          <div class="form-check">
            <%= f.radio_button :gender, 'Male', checked: true, data: { toggle: 'radio' }, class: 'form-check-input', id: 'male' %>
            <label class="form-check-label" for="male">
              Male
            </label>
          </div>
          <div class="form-check">
            <%= f.radio_button :gender, 'Female', checked: true, data: { toggle: 'radio' }, class: 'form-check-input', id: 'female' %>
            <label class="form-check-label" for="female">
              Female
            </label>
          </div>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Notes:
        </label>
        <div class="col-sm-10">
          <%= f.text_area :notes, placeholder: 'Enter Notes', class: 'form-control' %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Email:
        </label>
        <div class="col-sm-10">
          <%= f.text_field :email, autofocus: true, placeholder: 'Enter Notes', class: 'form-control' %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row">
        <label class="col-sm-2 control-label">
          Phone Number:
        </label>
        <div class="col-sm-10">
          <%= f.text_field :phone, autofocus: true, placeholder: 'Enter Notes', class: 'form-control' %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>
